@{
    ViewData["Title"] = "Danh sách điểm danh";
}

<div class="container mt-4">
    <h2 class="text-center">Danh sách điểm danh</h2>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Tên</th>
                <th>Mã sinh viên</th>
                <th>Ngày 1</th>
                <th>Ngày 2</th>
                <th>Ngày 3</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var studentAttendance in ViewBag.StudentAttendances)
            {
                <tr>
                    <td>@studentAttendance.Student.Name</td>
                    <td>@studentAttendance.Student.StudentCode</td>
                    @foreach (var date in studentAttendance.Student.StudentSubjectAttendances)
                    {
                        <td class="text-center">
                            <input type="checkbox" @(date.IsPresent ? "checked" : "") />
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
